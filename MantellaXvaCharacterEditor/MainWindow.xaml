<Window x:Class="MantellaXvaCharacterEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Mantella Character Editor"
        Height="700"
        Width="1100"
        MinHeight="500"
        MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="Set xVA-Synth folder" Click="SetXvaSynthFolderMenuItem_Click" />
                <Separator />
                <MenuItem Header="Quit" Click="QuitMenuItem_Click" />
            </MenuItem>
        </Menu>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" MinWidth="180" />
                <ColumnDefinition Width="8" />
                <ColumnDefinition Width="3*" MinWidth="300" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <ListBox x:Name="CharacterListBox"
                         Grid.Row="0"
                         SelectionChanged="CharacterListBox_SelectionChanged"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         MinHeight="100" />

                <Button x:Name="NewCharacterButton"
                        Grid.Row="1"
                        Margin="0,10,0,0"
                        Height="34"
                        Content="New character"
                        Click="NewCharacterButton_Click" />
            </Grid>

            <GridSplitter Grid.Column="1"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          ResizeBehavior="PreviousAndNext"
                          ResizeDirection="Columns"
                          Background="Transparent"
                          ShowsPreview="True" />

            <Grid Grid.Column="2" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="170" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,10" Text="Character name" />
                    <TextBox x:Name="CharacterNameTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,10" TextChanged="FieldControl_Changed" />

                    <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,10" Text="Voice model" />
                    <ComboBox x:Name="VoiceModelComboBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10" SelectionChanged="FieldControl_Changed" />

                    <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,10" Text="Gender" />
                    <ComboBox x:Name="GenderComboBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,10" SelectionChanged="FieldControl_Changed">
                        <ComboBoxItem Content="Male" />
                        <ComboBoxItem Content="Female" />
                    </ComboBox>

                    <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,10" Text="Species" />
                    <ComboBox x:Name="SpeciesComboBox" Grid.Row="3" Grid.Column="1" Margin="0,0,0,10" SelectionChanged="FieldControl_Changed" />

                    <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,10" Text="Race" />
                    <ComboBox x:Name="RaceComboBox" Grid.Row="4" Grid.Column="1" Margin="0,0,0,10" SelectionChanged="FieldControl_Changed" />

                    <TextBlock Grid.Row="5" Grid.Column="0" VerticalAlignment="Top" Margin="0,0,10,0" Text="Bio" />
                    <TextBox x:Name="BioTextBox"
                             Grid.Row="5"
                             Grid.Column="1"
                             MinHeight="160"
                             VerticalAlignment="Stretch"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             TextChanged="FieldControl_Changed" />
                </Grid>

                <StackPanel Grid.Row="1"
                        Margin="0,12,0,0"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                    <Button x:Name="LoadExistingOverrideButton"
                        Width="170"
                        Height="34"
                        Margin="0,0,10,0"
                        Content="Load existing override"
                        IsEnabled="False"
                        Click="LoadExistingOverrideButton_Click" />
                    <Button x:Name="SaveButton"
                        Width="110"
                        Height="34"
                        Content="Save"
                        Click="SaveButton_Click" />
                </StackPanel>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
