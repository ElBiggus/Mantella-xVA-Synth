<Window x:Class="MantellaXvaCharacterEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Mantella Character Editor"
        Height="700"
        Width="1100"
        MinHeight="500"
        MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="Set xVA-Synth folder" Click="SetXvaSynthFolderMenuItem_Click" />
                <MenuItem Header="Preview invalid voice model fixes..." Click="PreviewInvalidVoiceModelsMenuItem_Click" />
                <MenuItem Header="Fix invalid voice models..." Click="FixInvalidVoiceModelsMenuItem_Click" />
                <Separator />
                <MenuItem Header="Quit" Click="QuitMenuItem_Click" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="View on Nexus Mods" Click="ViewOnNexusModsMenuItem_Click" />
                <MenuItem Header="View on GitHub" Click="ViewOnGitHubMenuItem_Click" />
            </MenuItem>
        </Menu>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="330" MinWidth="300" />
                <ColumnDefinition Width="8" />
                <ColumnDefinition Width="3*" MinWidth="300" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <GroupBox Grid.Row="0" Header="Filters" Margin="0,0,0,10">
                    <Grid Margin="10,6,10,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="115" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,8" Text="Has override?" />
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,8" Orientation="Horizontal" VerticalAlignment="Center">
                            <RadioButton x:Name="HasOverrideAllRadioButton"
                                         GroupName="HasOverrideFilter"
                                         Content="All"
                                         Margin="0,0,10,0"
                                         IsChecked="True"
                                         Checked="HasOverrideFilterRadioButton_Checked" />
                            <RadioButton x:Name="HasOverrideYesRadioButton"
                                         GroupName="HasOverrideFilter"
                                         Content="Yes"
                                         Margin="0,0,10,0"
                                         Checked="HasOverrideFilterRadioButton_Checked" />
                            <RadioButton x:Name="HasOverrideNoRadioButton"
                                         GroupName="HasOverrideFilter"
                                         Content="No"
                                         Checked="HasOverrideFilterRadioButton_Checked" />
                        </StackPanel>

                        <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,8" Text="Voice model status" />
                        <Grid Grid.Row="1" Grid.Column="1" Margin="0,0,0,8" VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <RadioButton x:Name="VoiceModelStatusAllRadioButton"
                                         Grid.Row="0"
                                         Grid.Column="0"
                                         GroupName="VoiceModelStatusFilter"
                                         Content="All"
                                         Margin="0,0,18,4"
                                         IsChecked="True"
                                         Checked="VoiceModelStatusFilterRadioButton_Checked" />
                            <RadioButton x:Name="VoiceModelStatusValidRadioButton"
                                         Grid.Row="0"
                                         Grid.Column="1"
                                         GroupName="VoiceModelStatusFilter"
                                         Content="Valid"
                                         Margin="0,0,0,4"
                                         Checked="VoiceModelStatusFilterRadioButton_Checked" />
                            <RadioButton x:Name="VoiceModelStatusInvalidRadioButton"
                                         Grid.Row="1"
                                         Grid.Column="0"
                                         GroupName="VoiceModelStatusFilter"
                                         Content="Invalid"
                                         Margin="0,0,18,0"
                                         Checked="VoiceModelStatusFilterRadioButton_Checked" />
                            <RadioButton x:Name="VoiceModelStatusNoneRadioButton"
                                         Grid.Row="1"
                                         Grid.Column="1"
                                         GroupName="VoiceModelStatusFilter"
                                         Content="None"
                                         Checked="VoiceModelStatusFilterRadioButton_Checked" />
                        </Grid>

                        <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,8" Text="Voice model" />
                        <ComboBox x:Name="VoiceModelFilterComboBox"
                                  Grid.Row="2"
                                  Grid.Column="1"
                                  Margin="0,0,0,8"
                                  SelectionChanged="VoiceModelFilterComboBox_SelectionChanged" />

                        <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,8" Text="Gender" />
                        <Grid Grid.Row="3" Grid.Column="1" Margin="0,0,0,8" VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <RadioButton x:Name="GenderFilterAllRadioButton"
                                         Grid.Row="0"
                                         Grid.Column="0"
                                         GroupName="GenderFilter"
                                         Content="All"
                                         Margin="0,0,18,4"
                                         IsChecked="True"
                                         Checked="GenderFilterRadioButton_Checked" />
                            <RadioButton x:Name="GenderFilterFemaleRadioButton"
                                         Grid.Row="0"
                                         Grid.Column="1"
                                         GroupName="GenderFilter"
                                         Content="Female"
                                         Margin="0,0,0,4"
                                         Checked="GenderFilterRadioButton_Checked" />
                            <RadioButton x:Name="GenderFilterMaleRadioButton"
                                         Grid.Row="1"
                                         Grid.Column="0"
                                         GroupName="GenderFilter"
                                         Content="Male"
                                         Margin="0,0,18,0"
                                         Checked="GenderFilterRadioButton_Checked" />
                            <RadioButton x:Name="GenderFilterNoneRadioButton"
                                         Grid.Row="1"
                                         Grid.Column="1"
                                         GroupName="GenderFilter"
                                         Content="None"
                                         Checked="GenderFilterRadioButton_Checked" />
                        </Grid>

                        <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,8" Text="Race" />
                        <ComboBox x:Name="RaceFilterComboBox"
                                  Grid.Row="4"
                                  Grid.Column="1"
                                  Margin="0,0,0,8"
                                  SelectionChanged="RaceFilterComboBox_SelectionChanged" />

                        <TextBlock Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,8" Text="Species" />
                        <ComboBox x:Name="SpeciesFilterComboBox"
                                  Grid.Row="5"
                                  Grid.Column="1"
                                  Margin="0,0,0,8"
                                  SelectionChanged="SpeciesFilterComboBox_SelectionChanged" />

                        <TextBlock Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0" Text="Name" />
                        <TextBox x:Name="NameFilterTextBox"
                                 Grid.Row="6"
                                 Grid.Column="1"
                                 VerticalAlignment="Center"
                                 TextChanged="NameFilterTextBox_TextChanged" />
                    </Grid>
                </GroupBox>

                <ListBox x:Name="CharacterListBox"
                         Grid.Row="1"
                         SelectionChanged="CharacterListBox_SelectionChanged"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         MinHeight="100" />

                <Button x:Name="NewCharacterButton"
                        Grid.Row="2"
                        Margin="0,10,0,0"
                        Height="34"
                        Content="New character"
                        Click="NewCharacterButton_Click" />
            </Grid>

            <GridSplitter Grid.Column="1"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          ResizeBehavior="PreviousAndNext"
                          ResizeDirection="Columns"
                          Background="Transparent"
                          ShowsPreview="True" />

            <Grid Grid.Column="2" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,6,8" Text="Character name" />
                    <TextBox x:Name="CharacterNameTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8" TextChanged="FieldControl_Changed" />

                    <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,6,8" Text="Voice model" />
                    <ComboBox x:Name="VoiceModelComboBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8" SelectionChanged="FieldControl_Changed" />

                    <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,6,8" Text="Gender" />
                    <ComboBox x:Name="GenderComboBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,8" SelectionChanged="FieldControl_Changed">
                        <ComboBoxItem Content="Male" />
                        <ComboBoxItem Content="Female" />
                    </ComboBox>

                    <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,6,8" Text="Species" />
                    <ComboBox x:Name="SpeciesComboBox" Grid.Row="3" Grid.Column="1" Margin="0,0,0,8" SelectionChanged="FieldControl_Changed" />

                    <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,6,8" Text="Race" />
                    <ComboBox x:Name="RaceComboBox" Grid.Row="4" Grid.Column="1" Margin="0,0,0,8" SelectionChanged="FieldControl_Changed" />

                    <TextBlock Grid.Row="5" Grid.Column="0" VerticalAlignment="Top" Margin="0,0,6,0" Text="Bio" />
                    <TextBox x:Name="BioTextBox"
                             Grid.Row="5"
                             Grid.Column="1"
                             MinHeight="160"
                             VerticalAlignment="Stretch"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             TextChanged="FieldControl_Changed" />
                </Grid>

                <StackPanel Grid.Row="1"
                        Margin="0,12,0,0"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                    <Button x:Name="LoadExistingOverrideButton"
                        Width="170"
                        Height="34"
                        Margin="0,0,10,0"
                        Content="Load existing override"
                        IsEnabled="False"
                        Click="LoadExistingOverrideButton_Click" />
                    <Button x:Name="SaveButton"
                        Width="110"
                        Height="34"
                        Content="Save"
                        Click="SaveButton_Click" />
                </StackPanel>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
